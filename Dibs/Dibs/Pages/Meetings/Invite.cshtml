@page
@model Dibs.Pages.Meetings.InviteModel

@{
    ViewData["Title"] = "Invite";
    int Invites = Model.NewMeeting.NumOfInvites;
}

<h1>Invite</h1>

<h4>Attendee</h4>
<hr />
<h5>@Invites</h5>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" name="Form.MeetingId" value="@Model.NewMeeting.Id" />
            <div class="form-group">
                @for (int i = 0; i < Model.NewMeeting.NumOfInvites; i++)
                {
                    <select name="Form.UserIds[@i]">
                        <option value="">Select...</option>
                        @foreach (var mu in Model.UserList)
                        {
                            <option value="@mu.Id">@mu.FullName </option>
                        }
                    </select>
                }
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
